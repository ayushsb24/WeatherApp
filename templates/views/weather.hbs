<!doctype html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{!-- NavBar --}}
    {{>navbar}}

    <!-- Main Header -->
    <div class="container-fluid main_header mt-5">
        <div class="row">
            <div class="col-lg-6 col-md-6 mx-auto col-12 px-2">
                <div class="main_content">
                    <form class="temp_form mt-4">
                        <input type="text" id="cityName" placeholder="Enter Your City name..." autocomplete="off">
                        <input id="submitBtn" type="submit" value="Search">
                    </form>
                    <div class="temp-information">
                        <div class="top_layer">
                            <p id="day">Wey</p>
                            <p id="date">13 OCT</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get output here</p>
                            <div class="middle_layer data-hide">
                                <p>
                                    <span id="temp">40.5</span>
                                    <sup>o</sup>C
                                </p>
                                <p id="temp_status">
                                    <i class="fas fa-snowflake"></i>
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}
